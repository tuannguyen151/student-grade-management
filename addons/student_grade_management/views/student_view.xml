<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- VIEW FORM -->
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">student.form</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="full_name" placeholder="Họ Và Tên" required="True" />
                            </h1>
                            <h2>
                                <field name="student_code" placeholder="Mã Sinh Viên"
                                    required="True" />
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="birthday" placeholder="Ngày Sinh" />
                                <field name="address" placeholder="Địa chỉ" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- VIEW TREE -->
        <record id="view_student_tree" model="ir.ui.view">
            <field name="name">student.tree</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="full_name" />
                    <field name="student_code" />
                    <field name="birthday" />
                    <field name="address" />
                    <button name="action_student_form" string="Sửa" type="object" class="oe_edit" />
                    <button name="unlink" string="Xóa" type="object" class="oe_delete" />
                </tree>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_student" model="ir.actions.act_window">
            <field name="name">Quản lý sinh viên</field>
            <field name="res_model">student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU ITEM -->
        <menuitem id="menu_student_grade_management" name="Quản lý điểm của sinh viên" />
        <menuitem id="menu_student_management" name="Quản lý sinh viên"
            parent="menu_student_grade_management"
            action="action_student" sequence='6' />
    </data>
</odoo>
