<odoo>
    <data>
        <!-- VIEW FORM -->
        <record id="view_course_form" model="ir.ui.view">
            <field name="name">course.form</field>
            <field name="model">course</field>
            <field name="arch" type="xml">
                <form string="Course">
                    <sheet>
                        <group>
                            <field name="name" placeholder="Nhập tên học phần" required="True" />
                            <field name="code" placeholder="Nhập mã học phần" required="True" />
                            <field name="description" placeholder="Nhập mô tả" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- VIEW TREE -->
        <record id="view_course_tree" model="ir.ui.view">
            <field name="name">course.tree</field>
            <field name="model">course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <!-- ACTION -->
        <record model="ir.actions.act_window" id="action_course">
            <field name="name">Quản lý học phần</field>
            <field name="res_model">course</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_course" name="Quản lý học phần"
            parent="menu_student_grade_management"
            action="action_course" />
    </data>
</odoo>
